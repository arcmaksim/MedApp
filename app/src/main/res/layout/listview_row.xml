<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_transparent">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:minHeight="@dimen/listview_row_height"
        android:paddingLeft="@dimen/listview_row_title_padding"
        android:paddingRight="@dimen/listview_row_title_padding"
        android:textSize="@dimen/listview_row_title_size" />

    <TextView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minHeight="@dimen/listview_row_height"
        android:paddingLeft="@dimen/listview_row_title_padding"
        android:paddingRight="@dimen/listview_row_title_padding"
        android:textSize="@dimen/listview_row_title_size" />

</RelativeLayout>